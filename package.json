{
  "name": "solib",
  "version": "0.0.1",
  "description": "**Modular**, **Interoperable**, and **gas optimized** library for **secure EVM smart contract development**.",
  "main": "index.js",
  "files": [
    "/contracts/**/*.sol",
    "/abis/*.json",
    "/scripts/*.ts",
    "/spec/*.ts",
    "/typechain-types/*.ts",
    "!/contracts/mocks/**/*",
    "!/contracts/tests/**/*"
  ],
  "scripts": {
    "abi": "npx hardhat export-abi --no-compile",
    "type": "npx hardhat typechain",
    "build": "npx hardhat compile && npm run abi",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WagmiFan/solib.git"
  },
  "keywords": [
    "Solidity",
    "ABI",
    "defi",
    "wallet",
    "eth",
    "evm",
    "hardhat",
    "TypeScript",
    "Foundry",
    "NFT",
    "gameFi",
    "socialFi",
    "DAO"
  ],
  "author": "william.turner.89@mail.ru",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/WagmiFan/solib/issues"
  },
  "homepage": "https://github.com/WagmiFan/solib#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "chai": "^4.3.6",
    "hardhat": "^2.12.1",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "typechain": "^8.1.0"
  }
}
